---
import BaseLayout from "../../astro/layouts/baseLayout.astro";
import path from 'node:path'

export function getStaticPaths() {
  const allPages = Object.keys(import.meta.glob("../../react/pages/*.tsx", { eager: true }))
  .map(filename => path.basename(filename).replace('.tsx', ''))
  .map(page => ({
    params: { page },
  }));
  console.log(JSON.stringify(allPages, null, 2));
  return allPages;
}

const { page } = Astro.params;
const { default: Component } = await import(`../../react/pages/${page}.tsx`);
---

<BaseLayout>
  <Component />
</BaseLayout>
